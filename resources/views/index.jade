doctype strict
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=big-5")
    meta(name="Author", content="Tzu-chao, Wang")
    meta(name="Generator", content="Sublime Text 2")
    title= title
    link(rel="stylesheet", type="text/css", href="/stylesheets/index.css")
    link(rel="stylesheet", type="text/css", href="/stylesheets/base.css")
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
    script(type="text/javascript", src="/javascripts/require.js", data-main="/javascripts/index.js")
  body
    div(id="container", class="container")
      div(id="title", class="panel")
        p Travis Reporter
      div(id="search_tool_bar", class="panel")
        table
          tr
            td
              img(id="img_magnifier", src="images/magnifier.png", alt="magnifier image")
            td(id="key_word" class="tb_last")
              p Key words
              input(class="search" type="text", name="name" value="")
            td
              p Error count
              input(class="search", type="text", name="error" value="")
            td
              p Date range
              input(class="search", type="text", name="date" value="")
            td
              p Display count
              input(class="search", type="text", name="count" value="")
            td
              button(id="bt_search", class="bt") Search
      hr
      div(id="info_box", class="panel")
        div(id="info_box_tab")
          span
            p(id="tab0" class="tab") Home page
        div(id="info_box_in_index", class="bg")
          div(id="display0" class="display")
            table(class="tb_header")
              tr(class="tb_header")
                th(axis="name", class="tb_header")
                  span File path
                  img(class="img_sort up", src="images/arrow_up.png", alt="sort")
                  img(class="img_sort down", src="images/arrow_down.png", alt="sort")
                th(axis="date", class="tb_header")
                  span Date
                  img(class="img_sort up", src="images/arrow_up.png", alt="sort")
                  img(class="img_sort down", src="images/arrow_down.png", alt="sort")
                th(axis="error", class="tb_header")
                  span Error count
                  img(class="img_sort up", src="images/arrow_up.png", alt="sort")
                  img(class="img_sort down", src="images/arrow_down.png", alt="sort")
                th(class="tb_last")